---
import Image from '../assets/laptopn-image.png';
---

<div class="laptop-image" >
	<img src={Image.src} alt="Laptop-Image" >
</div>


<style>
    .laptop-image {
        background-color: white;
        width: 100%;
        height: 150px;
        position: relative;
        text-align: center; /* Center align the image */
    }
    
    img {
        width: 800px; /* Adjust as needed */
        position: absolute;
        left: 50%; /* Center the image horizontally */
        transform: translateX(-50%); /* Adjust position to center */
        top: -300px; /* Adjust vertical position as needed */
        z-index: 1;
       
    }

    @media only screen and (max-width:900px) {
      
        img {
            width: 100%;
            left: 50%; /* Center the image horizontally */
            transform: translateX(-50%); /* Adjust position to center */
            top: -250px; /* Adjust vertical position as needed */
        }
    }

</style>